<!DOCTYPE html>

<title>Hello AdminController!</title>

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    #table { background: #2196F3; color:  white; border-collapse: collapse; margin: 10px; padding: 10px;}
    #td, th {border: solid white; padding: 2px; }
    table { color: #2196F3; border-collapse: collapse; margin: 10px; padding: 10px;}
    th {border-bottom: solid #373b38; padding: 4px 8px; }
    td {border-bottom: solid #616161; padding: 4px 8px; }
    .button {
        #background-color: #2196F3;
        border: none;
        color: #2196F3;
        padding: 10px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 10px 10px;
        cursor: pointer;
    }
    .action { color: #2196F3; }
</style>

<div class="example-wrapper">
    <h1>Users</h1>
</div>
<div id="data">
    {# <form action="{{ base }}/admin/user/0">
        <input class="button" type="submit" value="Pridať používateľa" />
    </form> #}
    {# select id, email, roles, password, name, surname, skupina #}
    <table>
        <tr>
            <th>id</th><th>email</th><th>name</th><th>surname</th><th>skupina</th><th></th><th></th>
        </tr>

    {% for row in table %}
        <tr>
            {% for column in row %}
                <td>{{ column }}</td>
            {% endfor %}
            <td><a href="{{ base }}/admin/user/{{ row.id }}" class="action"> Uprav </a></td>
            <td><a href="{{ base }}/admin/delete/user/{{ row.id }}" class="action"> Zmaz </a></td>
        </tr>
    {% endfor %}
    </table>
    <form action="{{ base }}/admin/user/0">
        <input class="button" type="submit" value="Pridať používateľa" />
    </form>
</div>
{% endblock %}
