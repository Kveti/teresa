{% extends 'dashboard_base.html.twig' %}

{% block title %}Reporty {{ project }}{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
    <link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet"/>
{% endblock %}

{% block nav %}
  {% for idx, menu in projects %}
      <a href="{{ base }}/project/{{ menu }}">{{ menu }}</a>
  {% endfor %}
{% endblock %}


{% block body %}


<div class="main">
  {% for idx, directory in directories %}
    {% set vypis = true %}
    <a href="{{ path[idx] }}">
    {% if directory=="logy" %}
        {% set directory = logs_status %}
        <img src="{{ asset('img/log.png') }}" alt="logo">
    {% elseif directory=="reporty" %}
        <img src="{{ asset('img/reporty.png') }}" alt="logo">
    {% elseif directory=="poznámky" or directory=="poznamky" %}
        <img src="{{ asset('img/notes.png') }}" alt="logo">
    {% elseif directory=="automatické" or directory=="automaticke" %}
        <img src="{{ asset('img/src.png') }}" alt="src">
        {% set directory = "zdrojové kódy" %}
    {% elseif directory=="scenáre" or directory=="scenare" %}
        <img src="{{ asset('img/scripts.png') }}" alt="logo">
    {% else %}
        {% set vypis = false %}
    {% endif %}
    {% if vypis %}
        {{ directory }}</a><br /><br />
    {% endif %}
  {% endfor %}
    <a href="{{ base }}/stats/{{ project }}"><img src="{{ asset('img/stats.png') }}" alt="stats">stats</a><br /><br />
    <a href="{{ base }}/reports/{{ project }}"><img src="{{ asset('img/reports.jpg') }}" alt="reports">reporty</a>
</div> 

{% endblock %}
